{
  "name": "novapm",
  "version": "0.0.0",
  "private": true,
  "description": "NovaPM - Next-generation AI-powered process manager",
  "license": "MIT",
  "author": "Sitharaj Seenviasan",
  "repository": {
    "type": "git",
    "url": "https://github.com/sitharaj88/novapm.git"
  },
  "homepage": "https://novapm.dev",
  "bugs": {
    "url": "https://github.com/sitharaj88/novapm/issues"
  },
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"packages/*/src/**/*.ts\"",
    "format:check": "prettier --check \"packages/*/src/**/*.ts\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck",
    "release": "pnpm build && pnpm changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "turbo": "^2.3.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
